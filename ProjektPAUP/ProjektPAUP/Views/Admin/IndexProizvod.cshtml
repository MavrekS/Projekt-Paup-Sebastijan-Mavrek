@model List<ProjektPAUP.Models.Proizvod>


@if (Model != null)
{
    <h2>Popis Proizvoda</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Cijena</th>
                <th>Akcija</th>
          

            </tr>
        </thead>
        <tbody>
            @foreach (var Proizvoda in Model)
            {
                <tr>
                    <td>@Proizvoda.Naziv</td>
                    <td>@Proizvoda.Cijena</td>
                    <td><a asp-action="ModifyProizvod" asp-controller="Admin" asp-route-ProizvodId="@Proizvoda.Id" class="">Modify</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nema dostupnih proizvoda.</p>
}